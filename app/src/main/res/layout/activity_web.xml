<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout
        android:id="@+id/id_rl_tool"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#eee"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.toly1994.mycode.view.widget.AlphaImageView
            android:id="@+id/id_iv_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/icon_close"/>

        <TextView
            android:id="@+id/id_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="200dp"
            android:layout_centerInParent="true"
            android:singleLine="true"
            android:ellipsize="end"
            android:text=""/>

        <com.toly1994.mycode.view.widget.AlphaImageView
            android:id="@+id/id_iv_refresh"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="15dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/icon_more_v"/>
    </RelativeLayout>

    <WebView
        android:id="@+id/id_wv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_rl_tool"/>
</android.support.constraint.ConstraintLayout>